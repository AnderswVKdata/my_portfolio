<odoo>
    <!-- Root Menu for the Module -->
    <menuitem 
    id="menu_my_portfolio_root" 
    name="My Portfolios"
    />

    <!-- Submenu: Repositories -->
    <menuitem 
    id="menu_portfolio_repos" 
    name="Repository Wizard" 
    parent="menu_my_portfolio_root"/>

    <!-- Action: Show All Repositories -->
    <record id="action_portfolio_repos" model="ir.actions.act_window">
        <field name="name">Repositories</field>
        <field name="res_model">portfolio.repository</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_all_repos_list"/>
        <field name="target">current</field>
    </record>

    <!-- Action: Show About Me -->
    <record id="action_about_me_form" model="ir.actions.act_window">
        <field name="name">About Me</field>
        <field name="res_model">portfolio.about.me.content</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_about_me_form"/>
        <field name="target">current</field>
        <field name="res_id" ref="about_me_singleton_record"/>
    </record>

    <!-- Action: Show About Me -->
    <record id="action_partner_logo" model="ir.actions.act_window">
        <field name="name">Partner Logo</field>
        <field name="res_model">portfolio.about.me.partner.logo</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_partner_logo_list"/>
        <field name="target">current</field>
    </record>

    <!-- Action: Show Language Card Tag-->
    <record id="action_language_tag" model="ir.actions.act_window">
        <field name="name">Language Card Tag</field>
        <field name="res_model">portfolio.about.me.card.tag</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_language_card_tag_list"/>
        <field name="target">current</field>
    </record>

    <!-- Action: Show experience card-->
    <record id="action_experience_card" model="ir.actions.act_window">
        <field name="name">Experience Card</field>
        <field name="res_model">portfolio.about.me.experience.card</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_experience_card_list"/>
        <field name="target">current</field>
    </record>

    <!-- Action: Show contact me messages-->
    <record id="contact_me_message" model="ir.actions.act_window">
        <field name="name">Emails</field>
        <field name="res_model">portfolio.contact.me</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_contact_me_list"/>
        <field name="target">current</field>
    </record>

    <!-- Menu to messages-->
    <menuitem id="menu_contact_me_message"
              name="Emails"
              parent="menu_my_portfolio_root"
              action="contact_me_message"
              sequence="1"/>

    <!-- Menu to experience card-->
    <menuitem id="menu_experience_card"
              name="Experience Card"
              parent="menu_my_portfolio_root"
              action="action_experience_card"
              sequence="1"/>

    <!-- Menu to Language Card Tag View -->
    <menuitem id="menu_language_card_tag"
              name="Language Tag"
              parent="menu_my_portfolio_root"
              action="action_language_tag"
              sequence="1"/>

    <!-- Menu to Open the partner logo View -->
    <menuitem id="menu_partner_logo"
              name="Partner Logo"
              parent="menu_my_portfolio_root"
              action="action_partner_logo"
              sequence="1"/>



    <!-- Menu to Open the About Me View -->
    <menuitem id="menu_about_me_action"
              name="About Me"
              parent="menu_my_portfolio_root"
              action="action_about_me_form"
              sequence="1"/>

    <!-- Wizard Launch Menu (fixing this line!) -->
    <menuitem id="menu_open_fetch_wizard"
              name="Fetch GitHub Repos"
              parent="menu_portfolio_repos" 
              action="action_open_github_repo_wizard"
              sequence="1"/>
</odoo>
