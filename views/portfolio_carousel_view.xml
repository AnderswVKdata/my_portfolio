<!-- portfolio_carousel_view.xml-->

<odoo>
  <template id="homepage" name="Homepage" t-name="my_portfolio.homepage">
    <t t-call="website.layout">
      <t t-set="pageName" t-value="'homepage'" />
      <style>
          header#top {
            position: absolute;
            top: 0;
            width: 100%;
            z-index: 1000;
            background: transparent !important;
            border: none !important;
          }

          body, #wrapwrap {
            margin: 0 !important;
            padding: 0 !important;
          }

          .s_title:first-of-type {
            margin-top: 0 !important;
            padding-top: 0 !important;
          }
        </style>
      <div id="wrap" class="oe_structure oe_empty">
        

        <section class="s_title o_colored_level pt0 pb0" data-vcss="001" data-snippet="s_title"
          data-name="Title"
          style="position: relative; background-image: linear-gradient(135deg, rgb(47, 128, 237) 0%, rgb(178, 255, 218) 100%);"
          data-oe-shape-data="{&quot;shape&quot;:&quot;web_editor/Origins/14_001&quot;,&quot;flip&quot;:[],&quot;showOnMobile&quot;:false,&quot;shapeAnimationSpeed&quot;:&quot;0&quot;}">
          <div class="o_we_shape o_web_editor_Origins_14_001" />
          <div class="s_allow_columns container-fluid">
            <div class="row o_grid_mode" data-row-count="4">
              <div class="o_grid_item g-col-lg-12 o_colored_level g-height-3 col-lg-12"
                style="grid-area: 2 / 1 / 5 / 13; z-index: 1;">
                <h2 class="display-3-fs" style="text-align: center;">Welcome To My Portfolio</h2>
              </div>
            </div>
          </div>
        </section>

        <section class="s_carousel_intro_wrapper p-0" data-snippet="s_carousel_intro" data-name="Carousel Intro">
          <div
            class="s_carousel_intro s_carousel_default carousel slide o_colored_level pointer-event carousel-dark"
            data-bs-ride="true" data-bs-interval="10000" id="myCarousel1756706871012"
            style="position: relative;"
            data-oe-shape-data="{&quot;shape&quot;:&quot;web_editor/Origins/02_001&quot;,&quot;flip&quot;:[],&quot;showOnMobile&quot;:false,&quot;shapeAnimationSpeed&quot;:&quot;0&quot;}">
            <div class="o_we_shape o_web_editor_Origins_02_001" />

            <div class="carousel-inner">
              <t t-foreach="repos" t-as="repo" t-key="repo['name']">
                <div
                  t-att-class="'s_carousel_intro_item carousel-item px-0 o_colored_level o_cc o_cc1 pb112 pt0' + (' active' if repo['index'] == 1 else '')"
                  style="position: relative; background-color: rgba(0, 0, 0, 0); background-image: linear-gradient(135deg, rgb(47, 128, 237) 0%, rgb(178, 255, 218) 100%);"
                  data-oe-shape-data="{&quot;shape&quot;:&quot;web_editor/Airy/05_001&quot;,&quot;flip&quot;:[],&quot;showOnMobile&quot;:false,&quot;shapeAnimationSpeed&quot;:&quot;0&quot;,&quot;animated&quot;:&quot;true&quot;}">
                  <div class="o_we_shape o_web_editor_Airy_05_001 o_we_animated"></div>
                  <div class="container">
                    <div class="row o_grid_mode" data-row-count="14">
                      <div class="o_colored_level o_grid_item g-col-lg-6 g-height-2 col-lg-6"
                        data-name="Block" style="z-index: 1; grid-area: 1 / 4 / 3 / 10;">
                        <p style="text-align: center;">
                          <span class="h5-fs">
                            <t t-esc="repo['name']" />
                          </span>
                          <br />
                        </p>
                        <div class="s_hr pt0 pb96" data-snippet="s_hr" data-name="Separator">
                          <hr class="w-100 mx-auto" />
                        </div>
                      </div>
                      <div class="o_colored_level o_grid_item g-col-lg-11 g-height-12 col-lg-11"
                        data-name="Block" style="z-index: 2; grid-area: 2 / 1 / 14 / 12;">
                        <p>
                          <span class="h5-fs">
                            <t t-esc="repo['description']" />
                          </span>
                          <br />
                        </p>
                      </div>
                      <div class="o_grid_item col-lg-4 g-col-lg-4 g-height-2 o_colored_level"
                          style="z-index: 4; --grid-item-padding-y: 5px; --grid-item-padding-x: 5px; text-align: center; grid-area: 14 / 5 / 15 / 9;">
                        <t t-if="repo['languages']">
                          <p>
                            <t t-foreach="repo['languages']" t-as="lang" t-key="lang">
                              <span class="badge bg-secondary me-1" style="font-size: 0.9em;">
                                <t t-esc="lang"/>
                              </span>
                            </t>
                          </p>
                        </t>
                      </div>
                      <div class="o_grid_item col-lg-4 g-col-lg-4 g-height-2 o_colored_level"
                        style="z-index: 5; grid-area: 12 / 8 / 14 / 12;">
                        <p>
                          <a target="_blank" t-att-href="repo['html_url']">
                            <i
                              class="fa fa-github rounded shadow-sm ms-auto float-end bg-white-25 fa-5x"></i>
                          </a>
                        </p>
                      </div>
                    </div>
                  </div>
                </div>
              </t>
            </div>

            <div
              class="s_carousel_intro_controllers container position-absolute start-50 bottom-0 translate-middle-x w-100 mb-md-4 o_not_editable">
              <div
                class="s_carousel_intro_controllers_row row gap-3 gap-lg-5 justify-content-between flex-nowrap flex-row-reverse">

                <div class="o_arrows_wrapper gap-2 w-auto p-0">
                  <button class="carousel-control-prev o_not_editable o_we_no_overlay"
                    aria-label="Previous" title="Previous" data-bs-target="#myCarousel1756706871012"
                    data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true" />
                    <span class="visually-hidden o_default_snippet_text">Previous</span>
                  </button>
                  <button class="carousel-control-next o_not_editable o_we_no_overlay"
                    aria-label="Next" title="Next" data-bs-target="#myCarousel1756706871012"
                    data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true" />
                    <span class="visually-hidden o_default_snippet_text">Next</span>
                  </button>
                </div>

                <div class="s_carousel_indicators_numbers carousel-indicators align-items-center flex-shrink-1 w-auto o_we_no_overlay">
                  <t t-set="max_indicators" t-value="5"/> <!-- max buttons to show -->
                  <t t-foreach="repos" t-as="repo" t-key="repo['name']">
                    <t t-if="repo['index'] &lt;= max_indicators">
                      <button
                        type="button"
                        data-bs-target="#myCarousel1756706871012"
                        aria-label="Slide #{repo['index']}"
                        t-att-class="'active' if repo['index'] == 1 else ''"
                        t-att-data-bs-slide-to="repo['index'] - 1"
                        t-att-aria-current="'true' if repo['index'] == 1 else None">
                      </button>
                    </t>
                  </t>
                </div>

              </div>
            </div>
          </div>
        </section>

      </div>
    </t>
  </template>
</odoo>
