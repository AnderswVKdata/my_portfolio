<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">
    <record id="about_me_singleton_record" model="portfolio.about.me.content">
        <field name="name"/>
        <field name="title"/>
        <field name="description"/>
        <field name="address"/>
        <field name="image"/>
    </record>

    <record id="view_about_me_form" model="ir.ui.view">
        <field name="name">portfolio.about.me.content.form</field>
        <field name="model">portfolio.about.me.content</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="title"/>
                        <field name="description"/>
                        <field name="address"/>
                        <field name="image"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
