<odoo>
    <!-- Backend List View -->
    <record id="view_all_repos_list" model="ir.ui.view">
        <field name="name">portfolio.repository.list</field>
        <field name="model">portfolio.repository</field>
        <field name="arch" type="xml">
            <list>           
                <field name="name"/>             
                <field name="url"/>
                <field name="published"/>
                <field name="end_date"/> 
                <field name="portfolio_tag_ids" widget="many2many_tags"/>
                <field name="description"/>             
            </list>
        </field>
    </record>
    <record id="view_all_repos_form" model="ir.ui.view">
        <field name="name">portfolio.repository.form</field>
        <field name="model">portfolio.repository</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>             
                        <field name="url"/>
                        <field name="published"/>
                        <field name="end_date" invisible="not published"/>  
                        <field name="portfolio_tag_ids" widget="many2many_tags"/>
                        <field name="description"/>                  
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Wizard Action  -->
    <record id="action_open_github_repo_wizard" model="ir.actions.act_window">
        <field name="name">Fetch GitHub Repositories</field>
        <field name="res_model">portfolio.github.repo.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- QWeb Template for Website -->
    <template id="publish_repo" name="Publish GitHub Repos" t-name="my_portfolio.publish_repo">
        <t t-call="website.layout">
            <div class="container my-5">
                <h2>Fetched GitHub Repositories</h2>
                <t t-foreach="repos" t-as="repo">
                    <div class="mb-3">
                        <h4>
                            <a t-att-href="repo['html_url']" target="_blank">
                                <t t-esc="repo['name']"/>
                            </a>
                        </h4>
                        <p t-esc="repo['description']"/>
                    </div>
                </t>
            </div>
        </t>
    </template>
</odoo>
