<odoo>
  <!-- ir cron for automatic check-->
  <record id="ir_cron_unpublish_expired" model="ir.cron">
    <field name="name">Unpublish expired repositories</field>
    <field name="model_id" ref="my_portfolio.model_portfolio_repository"/>
    <field name="state">code</field>
    <field name="code">model.unpublish_expired_repo()</field>

    <!-- Run once a day at midnight -->
    <field name="interval_number">1</field>
    <field name="interval_type">days</field>

    <field name="active" eval="True"/>
  </record>
</odoo>